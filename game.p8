// ship
ship = {
  sp_width = 3,
  sp_height = 2,
  x = 10,
  y = 60,
  sp = 0
}

function ship_upd()
  if btn(1) then ship.x = ship.x+1 end
  ship.sp = flr(t/15)%2
end

function ship_draw()
  spr(
    ship.sp*ship.sp_width,
    ship.x, ship.y,
    ship.sp_width,
    ship.sp_height
  )
end
